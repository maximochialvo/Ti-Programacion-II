<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head.ejs")%>
<body>

	
	<%- include('./partials/headerLogueado.ejs') %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= usuario.fotoPerfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= usuario.usuario %> 
						<a href="profile-edit.html">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div class="pirulo">
					<p><%= usuario.email %></p>
				</div>
				<div>
					<ul class="pirulo">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i=0; i < productos.length; i++ ) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/producto/detalle/7">
							<figure class="product-box_image">
								<img src="<%- productos[i].imagen %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2>
									<%- productos[i].nombre %>
								</h2>
								<p>
									<%- productos[i].descripcion %>
								</p>
								<p>Comentarios: 

									<%= productos[i].comentarios.length %>
								</p>
							</article>
						</a>
					</section>
				</div>
				<% } %>

		</div>
	</div>
	<!-- /Mis productos -->


	<%- include("./partials/footer") %>
</body>	
</html>