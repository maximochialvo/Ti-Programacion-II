<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include("./partials/head.ejs")%>

	<body>
		<% if (locals.user) { %>
			<%- include('./partials/headerLogueado') %>
		<% } else { %>
			<%- include('./partials/header') %>
		<% } %>

			<!-- Banner -->
			<div class="banner">
				<img src="/images/img-home-banner.jpg" alt="Banner de ofertas">
			</div>
			<!-- /Banner -->

			<!-- Novedades -->

			<div class="container products-wrapper">
				<div class="row">
					<div class="col-12">
						<h2 class="products-title">Productos</h2>
					</div>
					<!-- Show the "ultimos" products -->
					<% for( let i=0; i < productos.length; i++ ) { %>
						<div class="col-12 col-sm-6 col-lg-3">
							<section class="product-box">
								<a href="/producto/detalle/<%= productos[i].id %>">
									<figure class="product-box_image">
										<img src="<%- productos[i].imagen_producto %>" alt="cafetera moulinex">
									</figure>
									<article class="product-box_data">
										<h2>
											<%- productos[i].nombre_producto %>
										</h2>
										<p>
											<%- productos[i].descripcion %>
										</p>
										<a href="/user/perfil/<%= productos[i].usuario.id %>">
											<%- productos[i].usuario.usuario %>
										</a>
									</article>
								</a>

							</section>
						</div>
						<% } %>

						
				</div>
			</div>


			<%- include("partials/footer") %>

	</body>

</html>